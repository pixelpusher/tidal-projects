let fm7 = n "[~ f2] ~ ~ [ef4 af3]"
    bm7 = n "~ [f2*2] ~ [af4 af3]"
    cm7 = n "[~ cf2] [g2*2] ~ [bf4 bf2]"
    dm7 = n "[~ df2] [af2*2] ~ ~"
    em7 = n "[~ ef2] [gf2*2] ~ [df4 ~]"
    alt = id
      . whenmod 7 3 rev
  in d3 $ alt $ slowcat [
        fm7, degrade $ fm7, fm7, fm7, bm7, cm7,
        slow 2 $ cat [
          dm7, em7
        ],
        cm7, dm7, em7
    ] # s "moogbasstone" # gain "1" # sustain "0.25" # velocity "0.6" # cut "1" # cutfreq (slow 16 $ scale 800 2200 $ sine1)
    # size "0.4" # room "0.4" # orbit "1"


-- lead synth

