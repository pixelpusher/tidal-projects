    sometimes (density 1.25) $ slow 2 $ n "[f6 af6?] f6 ~ af6 ~ af7 ~ [~ af7] ~ cf6 bf7 ~ ~ ef7 ~ g7"
  ] # s "profit5" # gain "1" # sustain "0.082" # velocity "0.8" # cut "2"


